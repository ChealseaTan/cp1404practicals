BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 50
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                font_size: 40
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                font_size: 40
    Button:
        text: 'Convert miles to km'
        font_size: 50
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 50
        text: app.output_text
        color: (1, 1, 0, 1)


